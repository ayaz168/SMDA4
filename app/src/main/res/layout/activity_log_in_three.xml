<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#232222"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn_Three">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical"
        android:weightSum="7">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Welcome back!"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Please login to your account."
            android:textColor="#948F8A"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"/>
        <EditText
            android:id="@+id/newEmailScreenThree"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Email Address"
            android:textColorHint="#948F8A"
            android:backgroundTint="#948F8A"
            android:textColor="#948F8A"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:inputType="textEmailAddress"/>
        <EditText
            android:id="@+id/newPasswordScreenThree"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="Password"
            android:textColorHint="#948F8A"
            android:backgroundTint="#948F8A"
            android:textColor="#948F8A"
            android:textSize="15sp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:inputType="textPassword"/>
        <TextView
            android:id="@+id/forgotPasswordScreenThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot?"
            android:textColor="#585688"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="-38dp"/>
        <Button
            android:id="@+id/logInScreenThree"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="LOGIN"
            android:background="@drawable/my_button_shape"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/registerNowThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity=""
                android:text="REGISTER NOW"
                android:textSize="15sp"
                android:textColor="#FFFFFF"/>
        </LinearLayout>



    </LinearLayout>

</LinearLayout>