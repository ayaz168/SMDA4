<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242524"
    tools:context=".Home_Five"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="10">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/currentUserImage7"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:padding="15dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:src="@drawable/stock_image"/>
        <TextView
            android:id="@+id/currentUserName7"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:text="Users Name"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="bottom|center"
            android:layout_marginBottom="25dp" />

        <TextView
            android:id="@+id/editButtonScreen7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_weight="1.5"
            android:padding="12dp"
            android:text="Edit"
            android:textColor="#00394F"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#000000"
        android:orientation="vertical"
        android:weightSum="2">
        <LinearLayout
            android:id="@+id/newContact7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="5">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_layout"
                android:padding="20dp"
                android:src="@drawable/new_contact"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Contact"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="20dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/newGroup7"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="5dp"
            android:weightSum="5">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/rounded_layout"
                android:padding="20dp"
                android:src="@drawable/new_group"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Group"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="20dp"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="#000000">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewScreen7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="-20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bottom_bar_home"
        android:layout_weight="1.5"
        android:weightSum="4"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/callScreen5"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/phone"
            />
        <ImageView
            android:id="@+id/cameraScreen5"
            android:layout_width="0dp"
            android:padding="25dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/camera"
            />
        <ImageView
            android:id="@+id/chatScreen5"
            android:padding="36dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/chat"
            />

        <ImageView
            android:id="@+id/contactsScreen5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="30dp"
            android:src="@drawable/friends_blue" />
    </LinearLayout>

</LinearLayout>