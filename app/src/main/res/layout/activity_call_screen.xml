<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242524"
    tools:context=".callScreen"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="10">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/currentUserImage7"
            android:layout_marginTop="20dp"
            android:layout_width="0dp"
            android:padding="15dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:src="@drawable/stock_image"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical"
            android:weightSum="2">
            <TextView
                android:id="@+id/currentUserName7"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Users Name"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:gravity="center"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:hint="Search ðŸ”"
                android:textAlignment="center"
                android:id="@+id/search_text"/>
        </LinearLayout>


        <TextView
            android:id="@+id/editButtonScreen7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_weight="1.5"
            android:padding="12dp"
            android:text="Edit"
            android:textColor="#00394F"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#000000">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewScreenCall"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="-20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bottom_bar_home"
        android:layout_weight="1.5"
        android:weightSum="4"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/callScreen5"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/phone"
            />
        <ImageView
            android:id="@+id/cameraScreen5"
            android:layout_width="0dp"
            android:padding="25dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/camera"
            />
        <ImageView
            android:id="@+id/chatScreen5"
            android:padding="36dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/chat"
            />

        <ImageView
            android:id="@+id/contactsScreen5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="30dp"
            android:src="@drawable/friends" />
    </LinearLayout>

</LinearLayout>