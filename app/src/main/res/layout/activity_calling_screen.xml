<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232222"
    android:id="@+id/mainScreen"
    tools:context=".CallingScreen">

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/contactPictureRV8"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:elevation="10dp"
        android:padding="8dp"
        android:src="@drawable/stock_profile"
        app:civ_border_color="#FF000000"
        app:civ_border_width="3dp" />

    <TextView
        android:id="@+id/contactName"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@id/contactPictureRV8"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Hello"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40sp" />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/contactName"
        android:id="@+id/tagg"
        android:text="calling"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="20sp"/>
    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_below="@id/tagg"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">
            <ImageView
                android:layout_margin="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:backgroundTint="#333434"
                android:padding="20dp"
                android:src="@drawable/add"
                android:background="@drawable/circle_dark">
            </ImageView>
            <ImageView
                android:id="@+id/endButton"
                android:layout_margin="20dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:src="@drawable/video"
                android:background="@drawable/circle_dark">
            </ImageView>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:id="@+id/goBack"
                android:background="@drawable/circle_red"
                android:padding="20dp"
                android:src="@drawable/call"></ImageView>
        </LinearLayout>
    </RelativeLayout>



</RelativeLayout>