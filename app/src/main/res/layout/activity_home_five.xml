<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242524"
    tools:context=".Home_Five"
    android:orientation="vertical"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:weightSum="10">
        <ImageView
            android:id="@+id/writeNewMessgeScreen5"
            android:layout_marginTop="40dp"
            android:layout_width="0dp"
            android:padding="15dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:src="@drawable/write_new_messages"/>
        <TextView
            android:id="@+id/newMessagePromptScreen5"
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="match_parent"
            android:text="New Messages"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:gravity="bottom|center"
            android:layout_marginBottom="25dp" />
        <ImageView
            android:id="@+id/searchScreen5"
            android:layout_marginTop="35dp"
            android:layout_width="0dp"
            android:padding="12dp"
            android:layout_weight="1.5"
            android:layout_height="match_parent"
            android:src="@drawable/ic_baseline_search_24"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#000000">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewScreen5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="-20dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bottom_bar_home"
        android:layout_weight="1.5"
        android:weightSum="4"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/callScreen5"
            android:layout_width="0dp"
            android:padding="20dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/phone"
            />
        <ImageView
            android:id="@+id/cameraScreen5"
            android:layout_width="0dp"
            android:padding="25dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:src="@drawable/camera"
            />

        <ImageView
            android:id="@+id/chatScreen5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:src="@drawable/chat_blue" />

        <ImageView
            android:id="@+id/contactsScreen5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="25dp"
            android:src="@drawable/friends" />
    </LinearLayout>

</LinearLayout>